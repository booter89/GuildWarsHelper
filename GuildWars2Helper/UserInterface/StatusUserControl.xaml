<UserControl x:Class="GuildWars2Helper.UserInterface.StatusUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GuildWars2Helper.UserInterface"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint=".5,1" StartPoint=".5, 0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF240934" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <ListBox x:Name="StatusBox" BorderThickness="0" Background="Transparent"></ListBox>
    </Grid>
</UserControl>
